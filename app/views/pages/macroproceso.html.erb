<% @title = "Macroproceso" %>

<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li> <%= link_to  "Inicio", root_path %></li>
    <li class="is-active">      
      <a href="#" aria-current="page">El Macroproceso</a>
    </li>
  </ul>
</nav>


<div class="columns">
  <div class="column">
      <div class="card margin-small shadow-cm">
        <div class="card-content">
          <p class="title is-4 has-text-centered">El Macroproceso</p>
          <p class="subtitle is-6 has-text-centered">Los procesos de la organizaci√≥n.</p>


          <div class="columns">
            <div class="column  is-middle">
                <div class="notification is-primary">
                  <% @informations.each do |information| %>
                      <strong> <%= information.macroproceso %> </strong>
                  <% end %>            
                </div>   
            </div>
          </div>      
          
          <div class="columns">
            <div class="column is-2">
              <h3 class="title is-5">Procesos </h3> 
            </div>
            <div class="column has-text-centered">
              <span class="icon "> <i class="mdi mdi-arrow-down mdi-36px"></i></span>
            </div>
          </div>
          
          <div class="columns is-multiline">
            <% @processings.each do |proceso| %>            
              <div class="column is-one-quarter">
                <div class="notification no-margin is-info has-text-centered">
                  <%= proceso.title %>
                </div>
                <div class="is-middle mdi mdi-arrow-down mdi-36px"></div>
                  <div class="notification is-dark">
                  <% proceso.sub_processes.each do |sub_process| %>
                    
                      <div class="columns">
                        <div class="column is-1">
                          <div class="is-middle mdi mdi-check"></div>
                        </div>
                        <div class="column">
                          <%= sub_process.title %>.
                        </div>
                      </div>
                    
                  <% end %>
                  </div>
              </div>
            <% end %>
          </div>
          
          
          <div class="columns">
            <div class="column">
                <h3 class="title is-5">
                  Sub Procesos <span class="icon"> <i class="mdi mdi-arrow-up"></i></span>
                </h3>
            </div>
          </div>
           
        </div>
      </div>
  </div>  
</div>