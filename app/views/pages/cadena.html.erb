<% @title = "Cadena de valor" %>
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li> <%= link_to  "Inicio", root_path %></li>
    <li class="is-active">      
      <a href="#" aria-current="page">La cadena de valor</a>
    </li>
  </ul>
</nav>


<div class="columns">
  <div class="column">
      <div class="card margin-small shadow-cm">
        <div class="card-content">
          <p class="title is-4 has-text-centered">La cadena de valor</p>
          <p class="subtitle is-6 has-text-centered">La actividades primarias y de apoyo de la organizaci√≥n.</p>


          <div class="shadow-cm padding-small-all">
            <% @areas.each do |area| %>
              <div class="columns ">
                <div class="column has-background-primary has-text-white">
                  <div class="has-text-weight-bold">
                    <%= area.name %>
                  </div>
                </div>
              </div>

              <% area.activities.each do |actividad| %>
                <div class="columns">

                    <div class="column">
                      <%= actividad.name %>
                    </div>

                </div>
              <% end %>
            <% end %>

          </div>
          
        </div>
      </div>
  </div>
</div>
