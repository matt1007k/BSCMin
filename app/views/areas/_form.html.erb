<%= form_with(model: area, local: true) do |form| %>
  <% if area.errors.any? %>
    <div class="message is-danger">
      <h2 class="title is-5"><%= pluralize(area.errors.count, "error") %> al realizar la operaci√≥n:</h2>
      <div class="message-body">
        <ul>
          <% area.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "label is-normal" %>
    <div class="control"> 
      <%= form.text_field :name, class: "input is-info" %>
    </div>
  </div>

  <div class="actifield is-grouped margin-small-topons">
    <%= form.submit "Guardar", class: "button is-primary" %>
  </div>
<% end %>
