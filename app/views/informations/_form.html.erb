<%= form_with(model: information, url: informations_path, local: true) do |form| %>
  <% if information.errors.any? %>
    <div class="message is-danger">
      <h2 class="title is-5"><%= pluralize(information.errors.count, "error") %> al realizar está operación:</h2>
      <div class="message-body">
        <ul>
          <% information.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "label is-normal" %>
    <div class="control"> 
      <%= form.text_field :name, class: "input is-info" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :macroproceso, class: "label is-normal" %>
    <div class="control"> 
      <%= form.text_field :macroproceso, class: "input is-info" %>
    </div>
  </div> 

  <div class="field">
    <%= form.label :mission, class: "label is-normal" %>
    <div class="control"> 
      <%= form.text_area :mission, class: "textarea is-info" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :vision, class: "label is-normal" %>
    <div class="control"> 
      <%= form.text_area :vision, class: "textarea is-info" %>
    </div>
  </div>

  <div class="actifield is-grouped margin-small-topons">
    <%= form.submit "Guardar", class: "button is-primary" %>
  </div>
<% end %>
