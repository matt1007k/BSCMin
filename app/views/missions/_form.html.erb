<%= form_with(model: mission, local: true) do |form| %>
  <% if mission.errors.any? %>
    <div class="message is-danger">
      <h2 class="title is-5"><%= pluralize(mission.errors.count, "error") %> error impidió guardar la misión:</h2>
      <div class="message-body">
        <ul>
          <% mission.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "label is-normal" %>
    <div class="control"> 
      <%= form.text_area :title, class: "textarea" %>
    </div>
  </div>

  <div class="actifield is-grouped margin-small-topons">
    <%= form.submit "Guardar", class: "button is-primary" %>
  </div>
<% end %>
