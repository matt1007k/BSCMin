<!DOCTYPE html>
<html>
  <head>
    <title>BSC Fiscalia de la Naci√≥n - <%= @title %> </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'hello_vue' %>
  </head>

  <body>
    <% if flash[:notice] %>
    	<div class="notification is-success no-margin">
        <button class="delete"></button>
  	  	<p class="notice"><%= notice %></p>
    	</div>
   	<% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger no-margin">
        <button class="delete"></button>
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <%= render  "partials/nav" %>    
    <%= render 'partials/sidebar' %>

    <div class="main-page">      
      <div class="main-content ">  
          <div class="card-content">
              <div class="container"> 
                <%= yield %>
              </div>
          </div>  
      </div>
    </div>
    
    
  </body>
</html>
