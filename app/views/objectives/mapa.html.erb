<% @title = "Objetivos Estratégicos" %>

<div class="columns">
  <div class="column">
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li> <%= link_to  "Dashboard", root_path %></li>
        <li> <%= link_to  "Objetivos Estratégicos", objectives_path %></li>
        <li class="is-active">      
          <a href="#" aria-current="page">Mapa Estratégicos</a>
        </li>
      </ul>
    </nav>
  </div>
  <div class="column is-flex-row-end">
    <%= link_to indicators_path, class: "button is-info" do %>
    <p> Indicatores </p>
    <span class="icon">
        <i class="mdi mdi-arrow-right"></i>
    </span>
    <% end %>
  </div>
</div>



<div class="columns">
  <div class="column">
      <div class="card margin-small shadow-cm">
        <div class="card-content">
          <p class="title is-4 has-text-centered">Mapa Estratégicos.</p>           
 
          <div class="margin-small-top">
            <div class="columns">
              <div class="column is-3">
                <div class="title is-5">Perspectivas</div>
              </div>
              <div class="column">
                <div class="title is-5">Objetivos Estratégicos</div>
              </div>
            </div>


            <% @perspectives.each do |perspective| %>           
            <div class="columns">
              <div class="column is-3">
                  <div class="notification is-primary">
                      <%= perspective.title %>
                  </div>
              </div>

              <div class="column">
                  <div class="columns is-multiline">
                    <% perspective.objectives.each do |objective| %>
                    <div class="column is-4">
                        <div class="notification is-success">
                          <div class="columns">
                            <div class="column is-2">
                              <%= objective.slug %>
                            </div>
                            <div class="column">
                              <%= objective.content %>
                            </div>
                          </div>
                        </div>
                    </div>
                    <% end %>
                  </div>                 
              </div>
            </div>
              
            <% end %>

          </div>
        </div>
      </div>

  </div>
</div>


